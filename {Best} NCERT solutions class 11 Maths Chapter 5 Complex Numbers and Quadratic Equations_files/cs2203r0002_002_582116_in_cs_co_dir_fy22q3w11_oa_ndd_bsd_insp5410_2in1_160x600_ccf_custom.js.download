var banner = document.getElementById('banner');
var legal = document.getElementById('roll-cta');
var replay = document.getElementById('replay');


var tl = new TimelineMax({repeat:0, repeatDelay:0});

window.onload = function() {

  tl.set(banner, {visibility: "visible"})

	/*frame two*/
	.add("frame2")	
	.from(".title2-1, .title2-2, .title2-3, .cta2, .dell-logo2, .intel-logo, .vandor_copy", .5, { alpha:0, ease: Quad.easeInOut}, "frame2")
	.staggerTo(".title2-2", 1.5, {alpha:1, backgroundPosition : '300% 0%',  ease:Linear.easeOut}, 0.2, "frame2+=.5")
	.to(".title2, .dell-logo2, .intel-logo, .vandor_copy", .5, { alpha:0, ease:Quad.easeInOut}, "frame2+=2.75")

	/*frame three*/
	.add("frame3","frame2+=3")
	.from(".product3", .5, { xPercent:120, ease:Quad.easeInOut}, "frame3")
	.from(".title3", .5, {alpha:0, ease:Power1.easeInOut}, "frame3+=.3")	
	.from(".viof3", .5, { yPercent:190, ease:Expo.easeInOut}, "frame3+=.3")	
	.from(".vio_textf3", .5, {yPercent:100, ease:Expo.easeInOut}, "frame3+=.8")
	.to(".viof3, .vio_textf3", .5, {alpha:0, ease: Power1.easeInOut}, "frame3+=2.75")	
	.to(" .product3", .3, { xPercent:-130,  ease:Quad.easeInOut}, "frame3+=2.75")
	.to(" .title3", .5, { alpha:0,  ease:Quad.easeInOut}, "frame3+=2.75")

	/*frame four*/ 
	.add("frame4","frame3+=3")
	.to(".dell-logo2", .5, { alpha:1, ease:Quad.easeInOut}, "frame4")
	.from(".intel-logo2", .5, { alpha:0, ease:Quad.easeInOut}, "frame4")
	.from(".product4", .5, {xPercent:-140, ease:Quad.easeInOut}, "frame4")
	.from(".title4", .5, {alpha:0, ease:Power1.easeInOut}, "frame4+=.3")
	.from(".viof4", .5, { yPercent:190, ease:Expo.easeInOut}, "frame4+=.3")
	.from(".vio_textf4", .5, {yPercent:100, ease:Expo.easeInOut}, "frame4+=.8")

	/*roll over*/
	.from("#roll-cta", .5, {alpha:0, x:-300, ease:Power4.easeout}, "frame5")
	.from("#rolltext", .5, {alpha:0, ease:Power4.easeout}, "frame5")
	.from("#legal-text", .5, {alpha:0, ease:Power4.easeout}, "frame5")
	.to(".replay", .3, {autoAlpha:1, visibility: "visible", display:'block', ease: Sine.easeOut})

	legal.addEventListener("mouseover",legalHover);
	function legalHover(){
		tl.pause();
		TweenMax.to("#legal", .5, {top:0, ease:Power1.easeOut})  
	}

	legal.addEventListener("mouseout",legalOut);
	function legalOut(){
		tl.play();
		TweenMax.to("#legal", .5, {top:-1000, ease:Power1.easeIn})
	}

	  //----- Reply ------
      replay.addEventListener("click", function(){
          tl.restart();
      });
    
    // tl.seek("loop")

    var currentDuration = tl.duration();
    console.log(currentDuration);   
};
